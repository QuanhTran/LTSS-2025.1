{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-openmp",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-O3",
        "-march=native",
        "-fopenmp",
        "-g",
        "matrix_add.cpp",
        "-o",
        "build/matrix_add"
      ],
      "windows": {
        "command": "C:/msys64/mingw64/bin/g++.exe",
        "args": [
          "-O3",
          "-fopenmp",
          "-g",
          "matrix_add.cpp",
          "-o",
          "build/matrix_add.exe"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "run",
      "type": "shell",
      "command": "./build/matrix_add",
      "args": [
        "1000",
        "0"
      ],
      "windows": {
        "command": ".\\build\\matrix_add.exe",
        "args": [
          "1000",
          "0"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "build-and-run",
      "dependsOn": [
        "build-openmp",
        "run"
      ],
      "dependsOrder": "sequence"
    }
  ]
}